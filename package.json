{
  "private": true,
  "description": "Base tsconfig packages",
  "author": "Cecile Muller",
  "license": "MIT",
  "eslintConfig": {
    "extends": "@wildpeaks/commonjs"
  },
  "eslintIgnore": [
    "packages"
  ],
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": true,
    "bracketSpacing": false
  },
  "greenkeeper": {
    "commitMessages": {
      "dependencyUpdate": "feat: update ${dependency}",
      "devDependencyUpdate": "chore: update ${dependency}"
    }
  },
  "scripts": {
    "setup": "node test/setup.js",
    "test:lint": "mocha test/lint.spec.js",
    "test:node": "mocha test/node.spec.js",
    "test:web": "mocha test/web.spec.js",
    "test:class": "mocha test/class.spec.js",
    "test": "npm run test:lint && npm run test:node && npm run test:web"
  },
  "peerDependencies": {
    "typescript": "*"
  },
  "devDependencies": {
    "@wildpeaks/async": "1.3.1",
    "@wildpeaks/eslint-config-commonjs": "8.4.0",
    "@wildpeaks/webpack-config-web": "4.16.0",
    "ajv": "6.12.0",
    "eslint": "6.8.0",
    "express": "4.17.1",
    "fs-extra": "8.1.0",
    "mocha": "7.1.1",
    "preact": "10.3.4",
    "prettier": "1.19.1",
    "puppeteer": "2.1.1",
    "recursive-readdir": "2.2.2",
    "typescript": "3.8.3",
    "webpack": "4.42.0",
    "webpack-cli": "3.3.11"
  }
}
