{
  "private": true,
  "description": "Base tsconfig packages",
  "author": "Cecile Muller",
  "license": "MIT",
  "eslintConfig": {
    "extends": "@wildpeaks/commonjs"
  },
  "eslintIgnore": [
    "packages"
  ],
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": true,
    "bracketSpacing": false,
    "trailingComma": "none"
  },
  "scripts": {
    "setup": "node test/setup.js",
    "test:lint": "mocha test/lint.test.js",
    "test:node": "mocha test/node.test.js",
    "test:web": "mocha test/web.test.js",
    "test:class": "mocha test/class.test.js",
    "test": "npm run test:lint && npm run test:node && npm run test:web"
  },
  "peerDependencies": {
    "typescript": "*"
  },
  "devDependencies": {
    "@wildpeaks/eslint-config-commonjs": "10.7.0",
    "@wildpeaks/webpack-config-web": "5.11.0",
    "ajv": "6.12.6",
    "eslint": "7.12.1",
    "express": "4.17.1",
    "fs-extra": "9.0.1",
    "mocha": "8.2.0",
    "playwright": "1.5.1",
    "preact": "10.5.5",
    "prettier": "2.1.2",
    "recursive-readdir": "2.2.2",
    "typescript": "4.0.3",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12"
  }
}
