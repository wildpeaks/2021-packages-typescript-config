{
	"compilerOptions": {
		"newLine": "LF",
		"alwaysStrict": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"useDefineForClassFields": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": false,
		"sourceMap": true,
		"removeComments": true,

		"typeRoots": ["../../../node_modules"],
		"types": ["@types/node"],

		"module": "commonjs",
		"lib": ["es2017"],
		"target": "es2017",
		"outDir": "../../../lib"
	}
}
